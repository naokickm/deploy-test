doctype html
html
  head
    title Deploy Test
    css:
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e0e0e0;
      }
      h1 {
        margin: 0;
        color: #333;
      }
      .auth-info {
        text-align: right;
      }
      .user-email {
        color: #666;
        margin-bottom: 10px;
      }
      .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 500;
      }
      .btn-primary {
        background-color: #007bff;
        color: white;
      }
      .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        cursor: pointer;
      }
      .btn:hover {
        opacity: 0.9;
      }
      .links {
        margin-top: 20px;
      }
      .links a {
        display: inline-block;
        margin-right: 15px;
        color: #007bff;
        text-decoration: none;
      }
      .links a:hover {
        text-decoration: underline;
      }

  body
    .header
      h1 Deploy Test

      .auth-info
        - if user_signed_in?
          .user-email
            = current_user.email
          = button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-danger"
        - else
          = link_to "ログイン", new_user_session_path, class: "btn btn-primary"

    h2 Welcome to Deploy Test
    p Rails 7.2アプリケーション with Docker

    .links
      - unless user_signed_in?
        = link_to "新規登録", new_user_registration_path
        = link_to "パスワードを忘れた方", new_user_password_path
      - else
        = link_to "アカウント編集", edit_user_registration_path